        {
            "parameters": {
                "mode": "runOnceForEachItem",
                "jsCode": "const words = $('AssemblyAI - Get Result').item.json.words.map(w => ({\n  punctuated_word: w.text,\n  start: w.start / 1000,\n  end: w.end / 1000\n}));\n\nconst videos = $('Aggregate').item.json.map(i => `/n8n-video-${i.json.index}.mp4`);\n\n// Generate the paths based on 0-4 indices since we know we loop 5 times.\nconst videoPaths = Array.from({length: 5}, (_, i) => `/n8n-video-${i}.mp4`);\n\nconst metadata = {\n  audioUrl: \"n8n-audio.wav\",\n  videos: videoPaths,\n  words: words\n};\n\nreturn { json: metadata };"
            },
            "name": "Format Metadata",
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                3120,
                400
